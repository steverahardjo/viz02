{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/bubbleChart_pictograph.csv"
  },
  "width": 400,
  "height": 300,
  "mark": {
    "type": "circle"
  },
  "encoding": {
    "x": {
      "field": "Distance_km",
      "type": "quantitative",
      "axis":{
        "title":"Distance in KM"
      }
    },
    "y": {
      "field": "gdp_capita",
      "type": "quantitative",
      "title": "GDP per capita",
      "scale": {
        "type": "linear"
      },
      "axis":{
        "title":"GDP per Capita"
      }
    },
    "size": {
      "field": "arrivals",
      "type": "quantitative",
      "scale": {
        "range": [50, 800]
      }
    },
    "color": {
      "field": "Distance_km",
      "type": "quantitative",
      "scale": {
        "domain": [0, 1000, 5000, 10000, 20000],
        "range": ["blue", "lightblue", "white", "lightred", "red"]},
      "title": "Distance",
      "legend":null
    },
    "tooltip": [
      { "field": "name", "type": "nominal", "title": "Country" },
      { "field": "arrivals", "type": "quantitative", "title": "Number of Arrivals","format": ",.0f" },
      { "field": "Distance_km", "type": "quantitative", "title": "Distance to Malaysia (km)","format": ".2f" },
      { "field": "gdp_capita", "type": "quantitative", "title": "GDP per capita (dollar)","format": ".2f" }
    ]
  },
  "config": {
    "background": "dark",
    "axis": {
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    },
    "legend": {
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    }
  }
}




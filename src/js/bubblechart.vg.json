{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/bubbleChart_pictograph.csv"
  },
  "title": "Comparing Countries based on Distance, GDP, and Arrivals",
  "width": 500,
  "height": 400,
  "layer": [
    {
      "mark": {
        "type": "circle"
      },
      "encoding": {
        "x": {
          "field": "Distance_km",
          "type": "quantitative",
          "axis": {
            "title": "Distance in KM"
          }
        },
        "y": {
          "field": "gdp_capita",
          "type": "quantitative",
          "title": "GDP per Capita",
          "scale": {
            "type": "linear"
          },
          "axis": {
            "title": "GDP per Capita"
          }
        },
        "size": {
          "field": "arrivals",
          "type": "quantitative",
          "title": "Total Arrivals",
          "scale": {
            "range": [20, 50, 80, 200, 250, 400, 800],
            "domain": [200, 1000, 20000, 500000, 1000000, 5000000, 15000000]
          }
        },
        "color": {
          "field": "Distance_km",
          "type": "quantitative",
          "scale": {
            "domain": [0, 1000, 5000, 10000, 20000],
            "range": ["blue", "darkblue", "black", "darkred", "red"]
          },
          "title": "Distance",
          "legend": null
        },
        "tooltip": [
          { "field": "name", "type": "nominal", "title": "Country" },
          { "field": "arrivals", "type": "quantitative", "title": "Number of Arrivals", "format": ",.0f" },
          { "field": "Distance_km", "type": "quantitative", "title": "Distance to Malaysia (km)", "format": ",.0f" },
          { "field": "gdp_capita", "type": "quantitative", "title": "GDP per capita (dollar)", "format": ",.0f" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "color": "black",
        "dy": -10
      },
      "encoding": {
        "x": {
          "field": "Distance_km",
          "type": "quantitative"
        },
        "y": {
          "field": "gdp_capita",
          "type": "quantitative"
        },
        "text": {
          "value": "Singapore",
          "type": "nominal"
        }
      },
      "transform": [
        {
          "filter": "datum.name === 'Singapore'"
        }
      ]
    },
    {
      "mark": {
        "type": "rule",
        "color": "orange",
        "strokeWidth": 2
      },
      "encoding": {
        "y": {
          "datum": 11993,
          "type": "quantitative",
          "axis": {
            "title": "Malaysia GDP per Capita"
          }
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "orange",
        "fontSize": 12,
        "dy": -10
      },
      "encoding": {
        "y": {
          "datum": 11993,
          "type": "quantitative"
        },
        "text": {
          "value": "Malaysia's GDP per capita"
        }
      }
    }
  ],
  "config": {
    "background": "white",
    "axis": {
      "labelColor": "black",
      "titleColor": "black"
    },
    "legend": {
      "labelColor": "black",
      "titleColor": "black"
    },
    "title": {
      "color": "darkviolet",
      "fontSize": 18,
      "fontWeight":"bold"
    }
  }
}

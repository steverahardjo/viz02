{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/bubbleChart_pictograph.csv"
  },
  "width": 400,
  "height": 200,
  "mark": {
    "type": "circle"
  },
  "encoding": {
    "x": {
      "field": "Distance_km",
      "type": "quantitative"
    },
    "y": {
      "field": "gdp_capita",
      "type": "quantitative",
      "title": "GDP per capita",
      "scale": {
        "type": "linear"
      }
    },
    "size": {
      "field": "arrivals",
      "type": "quantitative",
      "scale": {
        "range": [100, 800]
      }
    },
    "color": {
      "field": "arrivals",
      "type": "quantitative",
      "scale": {
        "range": ["white", "red"]
      },
      "title": "Number of Arrivals"
    },
    "tooltip": [
      { "field": "name", "type": "nominal", "title": "Country" },
      { "field": "arrivals", "type": "quantitative", "title": "Number of Arrivals" },
      { "field": "Distance_km", "type": "quantitative", "title": "Distance to Malaysia" },
      { "field": "gdp_capita", "type": "quantitative", "title": "GDP per capita" }
    ]
  },
  "config": {
    "background": "dark",
    "axis": {
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    },
    "legend": {
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    }
  }
}




{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Radial Chart of Annual Tourist Expenditure",
  "data": {
    "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/expenditure.csv"
  },
  "facet": {
    "column": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    }
  },
  "spec": {
    "width": 200,
    "height": 200,
    "layer": [
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 16,
          "color": "#ADEFD1FF"
        },
        "encoding": {
          "text": {
            "field": "Year",
            "type": "ordinal"
          }
        }
      },
      {
        "mark": {
          "type": "arc",
          "innerRadius": 60,
          "stroke": "#fff"
        },
        "params": [
          {
            "name": "all",
            "select": { "type": "point", "fields": ["Component"] },
            "bind": "legend"
          }
        ],
        "encoding": {
          "theta": {
            "field": "RM",
            "type": "quantitative",
            "stack": true
          },
          "opacity": {
            "condition": { "param": "all", "value": 1 },
            "value": 0.1
          },
          "color": {
            "field": "Component",
            "type": "nominal",
            "scale": {
              "scheme": "category20"
            },
            "legend": {
              "title": "Component"
            }
          },
          "tooltip": [
            {
              "field": "Component",
              "type": "nominal",
              "title": "Category"
            },
            {
              "field": "Percentage",
              "type": "quantitative",
              "title": "Percentage (%)"
            },
            {
              "field": "RM",
              "type": "quantitative",
              "title": "Expenditure (RM)",
              "format": ",.0f"
            }
          ]
        }
      }
    ]
  },
  "config": {
    "background": "dark",
    "facet": {
      "spacing": 2
    },
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    },
    "legend": {
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    },
    "title": {
      "color": "#ADEFD1FF",
      "fontSize": 20
    }
  }
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Radial Chart of Annual Tourist Expenditure",
  "data": {
    "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/expenditure.csv"
  },
  "facet": {
    "column": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    }
  },
  "spec": {
    "width": 200,
    "height": 200,
    "layer": [
      {
        "mark": {
          "type": "arc",
          "innerRadius": 50,
          "stroke": "#fff"
        },
        "encoding": {
          "theta": {
            "field": "Percentage",
            "type": "quantitative",
            "stack": true
          },
          "color": {
            "field": "Component",
            "type": "nominal",
            "scale": {
              "scheme": "category20"
            },
            "legend": {
              "title": "Component"
            }
          },
          "tooltip": [
            {
              "field": "Component",
              "type": "nominal",
              "title": "Component"
            },
            {
              "field": "Percentage",
              "type": "quantitative",
              "title": "Percentage"
            },
            {
              "field": "RM",
              "type": "quantitative",
              "title": "Expenditure (RM)"
            }
          ]
        }
      }
    ]
  },
  "config": {
    "background": "dark",
    "facet": {
      "spacing": 5
    },
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    },
    "legend": {
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    }
  }
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple radial chart with embedded data.",
  "data": {
    "url":"https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/expenditure.csv"
  },  
  "facet": {
    "column": {
      "field": "Year"
    }
  },
  "spec":{
    "width": 300,
    "height": 300,
    "layer": [{
      "mark": {"type": "arc", "innerRadius": 100, "stroke": "#fff"}
    },{
      "mark": {"type": "text", "radiusOffset": 120},
      "encoding": {
        "text": {"field": "RM", "type": "quantitative"}
      }
    }],
    "encoding": {
      "theta": {"field": "Percentage", "type": "quantitative", "stack": true},
      "radius": {"field": "RM", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}},
      "color": {"field": "Component", "type": "nominal"}
    }
  }
}
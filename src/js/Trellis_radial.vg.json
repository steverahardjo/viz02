{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A radial chart showing the breakdown of expenditures by component across different years.",
  "data": {
    "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/expenditure.csv"
  },
  "facet": {
    "column": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    }
  },
  "spec": {
    "width": 200,
    "height": 200,
    "layer": [
      {
        "mark": {
          "type": "arc",
          "innerRadius": 50,
          "stroke": "#fff"
        },
        "encoding": {
          "theta": {
            "field": "Percentage",
            "type": "quantitative",
            "stack": true
          },
          "color": {
            "field": "Component",
            "type": "nominal",
            "legend": {
              "title": "Component"
            }
          },
          "tooltip": [
            {"field": "Component", "type": "nominal", "title": "Component"},
            {"field": "Percentage", "type": "quantitative", "title": "Percentage"},
            {"field": "RM", "type": "quantitative", "title": "Expenditure (RM)"}
          ]
        }
      }
    ]
  },
  "config": {
    "facet": {
      "spacing": 5
    },
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 700,
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/vega-datasets@v1.29.0/data/world-110m.json",
        "format": {
          "type": "topojson",
          "feature": "countries"
        }
      },
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "fill": "#b0bec5",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/grouped_arrivals.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "calculate": "year(datum.date)",
          "as": "Yr"
        },
        {
          "aggregate": [
            {"op": "sum", "field": "arrivals", "as": "sum_arrivals"}
          ],
          "groupby": ["Yr", "country"]
        }
      ],
      "params": [
        {
          "name": "dateSelection",
          "select": {
            "type": "point",
            "fields": ["Yr"]
          },
          "bind": {
            "input": "range",
            "min": 0,
            "max": 26,
            "step": 1,
            "name": "Select Year and Month"
          }
        }
      ],
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "size": {
          "condition": {
            "param": "dateSelection",
            "value": 10
          },
          "value": 0
        },
        "color": {"value": "blue"}
      }
    }
  ]
}






{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bump chart",
  "title": {
    "text": "SEA Countries Tourism Ranking (2019-2023)",
    "fontSize": 17,
    "anchor": "start",
    "fontWeight": "bold",
    "color":"#ADEFD1FF"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/bumpchart.csv"
  },
  "width": 200,
  "mark": {
    "type": "line",
    "orient": "vertical",
    "point": true
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal"
    },
    "y": {
      "field": "Ranking",
      "type": "ordinal"
    },
    "order": {
      "field": "Country",
      "type": "nominal"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "scale": {
        "range": ["blue", "#f58231", "#911eb4", "#fabed4", "#57FF33", "#ADEFD1FF"]
      }
    },
    "strokeWidth": {
      "condition": {
        "test": "datum.Country === 'Malaysia'",
        "value": 6
      },
      "value": 2
    }
  },
  "config": {
    "background": "dark",
    "axis": {
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    },
    "legend": {
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    }
  }
}

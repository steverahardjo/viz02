{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/sankey.csv"
  },
  "height": 100,
  "width": 1200,
  "title": {
    "text": "Heat map of Overall Gender and Destination Distribution",
    "color": "darkviolet",
    "fontSize": 23        
  },
  "config": {
    "view": {
      "strokeWidth": 0,
      "step": 13
    },
    "axis": {
      "domain": false,
      "labelColor": "#FFFFFF",         
      "titleColor": "#FFFFFF"          
    },
    "background": "dark"            
  },
  "mark": {
    "type": "rect",
    "stroke": "darkred",
    "strokeWidth": 1,
    "cornerRadius":5
  },
  
  "encoding": {
    "x": {
      "field": "soe",
      "type": "ordinal",
      "title": "State of Arrival",
      "axis": {
        "labelAngle": 0
      }
    },
    "y": {
      "field": "gender",
      "type": "ordinal",
      "title": "Gender"
    },
    "color": {
      "field": "value",
      "type": "quantitative",
      "legend": {
        "title": "Arrivals Count",
        "labelColor": "#FFFFFF",
        "titleColor": "#FFFFFF"
      },
      "scale": {
        "domain": [41, 10000, 300000, 8400000, 11200000, 14000000],
        "range": ["#f3e0ff", "#e0bbff", "#c197d7", "#844f87", "#4a148c"]      }
    },
    "tooltip": [
        {
          "field": "value",
          "type": "nominal",
          "title": "Arrivals",
          "format":",.0f"
        }
      ]
    }
}


  
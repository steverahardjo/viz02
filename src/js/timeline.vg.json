{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average of Overall Arrivals by Sub-Region to Malaysia",
  "width": 600,
  "height": 400,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/streamgraph.csv",
        "format": {
          "type": "csv"
        }
      },
      "params": [
        {
          "name": "all",
          "select": { "type": "point", "fields": ["sub-region"] },
          "bind": "legend"
        }
      ],
      "mark": {
        "type": "area",
        "interpolate": "monotone",
        "line": true,
        "stroke": "black"
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis": {
            "title":null,
            "grid": false,
            "tickCount": 40,
            "labelFontSize": 11
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "arrivals",
          "type": "quantitative",
          "axis": {
            "title": "Arrivals",
            "titleFontSize":12
          },
          "stack": "center"
        },
        "color": {
          "field": "sub-region",
          "type": "nominal",
          "legend": {
            "title": "Sub-Region"
          }
        },
        "opacity": {
          "condition": { "param": "all", "value": 1 },
          "value": 0.1
        },
        "tooltip": [
          { "field": "date", "type": "temporal", "title": "Date" },
          { "field": "arrivals", "type": "quantitative", "title": "Arrivals" },
          { "field": "sub-region", "type": "nominal", "title": "Sub-Region" }
        ]
      }
    },
    {
      "data": {
        "values": [
          { "Date": "2020-03-11", "Event": "WHO declares COVID-19 a global pandemic." },
          { "Date": "2022-04-01", "Event": "Malaysia reopens borders for international travelers after COVID-19 restrictions." },
          { "Date": "2022-02-24", "Event": "Beginning of the Russo-Ukrainian War." },
          { "Date": "2021-06-21", "Event": "Start of Summer Holiday" },
          { "Date": "2022-02-01", "Event": "Lunar New Year" },
          { "Date": "2022-06-22", "Event": "Start of Summer Holiday" },
          { "Date": "2023-01-22", "Event": "Lunar New Year" },
          { "Date": "2023-06-21", "Event": "Start of Summer Holiday" }
        ]
      },
      "mark": {
        "type": "rule",
        "color": "red",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "axis": {
            "titleFontSize": 10
          }
        },
        "tooltip": [
          { "field": "Date", "type": "temporal", "title": "Date" },
          { "field": "Event", "type": "ordinal", "title": "Event:" }
        ]
      }
    }
  ]
}







{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average of Overall Arrivals by Sub-Region to Malaysia",
    "fontSize": 18,
    "anchor": "start",
    "fontWeight": "bold",
    "color":"#ADEFD1FF"
  },
  "width": 770,
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/streamgraph.csv",
    "format": {
      "type": "csv"
    }
  },
  "layer": [
    {
      "params": [
        {
          "name": "all",
          "select": { "type": "point", "fields": ["sub-region"] },
          "bind": "legend"
        }
      ],
      "mark": {
        "type": "area",
        "interpolate": "monotone",
        "line": true,
        "stroke": "black"
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis": {
            "title": null,
            "grid": false,
            "tickCount": 40,
            "labelFontSize": 12
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "arrivals",
          "type": "quantitative",
          "axis": {
            "title": "Arrivals",
            "titleFontSize": 14
          },
          "stack": "zero"
        },
        "color": {
          "field": "sub-region",
          "type": "nominal",
          "scale": {
            "scheme": "category20"
          },
          "legend": {
            "title": "Sub-Region",
            "labelFontSize": 12,
            "titleFontSize": 14
          }
        },
        "opacity": {
          "condition": { "param": "all", "value": 1 },
          "value": 0.1
        },
        "tooltip": [
          { "field": "date", "type": "temporal", "title": "Date" },
          { "field": "arrivals", "type": "quantitative", "title": "Arrivals", "format": ",.0f" },
          { "field": "sub-region", "type": "nominal", "title": "Sub-Region" }
        ]
      }
    },
    {
      "data": {
        "values": [
          { "Date": "2020-03-11", "Event": "WHO declares COVID-19 a global pandemic." },
          { "Date": "2022-04-01", "Event": "Malaysia reopens borders for international travelers after COVID-19 restrictions." },
          { "Date": "2022-02-24", "Event": "Beginning of the Russo-Ukrainian War." },
          { "Date": "2022-02-01", "Event": "Lunar New Year" },
          { "Date": "2022-06-22", "Event": "Start of Summer Holiday" },
          { "Date": "2023-01-22", "Event": "Lunar New Year" },
          { "Date": "2023-06-21", "Event": "Start of Summer Holiday" }
        ]
      },
      "mark": {
        "type": "rule",
        "color": "red",
        "strokeWidth": 4
      },
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "axis": {
            "titleFontSize": 10
          }
        },
        "tooltip": [
          { "field": "Date", "type": "temporal", "title": "Date" },
          { "field": "Event", "type": "ordinal", "title": "Event:" }
        ]
      }
    }
  ],
  "config": {
    "background": "dark",
    "axis": {
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    },
    "legend": {
      "labelColor": "#ADEFD1FF",
      "titleColor": "#ADEFD1FF"
    },
    "mark": {
      "invalid": null
    }
  }
}









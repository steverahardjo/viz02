{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 1000,
    "data": {
        "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/streamgraph.csv"
    },
    "mark": {
        "type": "area",
        "interpolate": "catmull-rom"
    },
    "encoding": {
        "x": {
            "timeUnit": "yearmonth",
            "field": "date",
            "axis": {
                "domain": false,
                "format": "%Y-%m",
                "tickSize": 0
            }
        },
        "y": {
            "field": "arrivals",
            "axis": null,
            "stack":"normalize",
            "scale":{
                "range":[0, 2000]
            }
        },
        "color": {
            "field": "sub-region"
        }
    }
}

{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/streamgraph.csv"
    },
    "width": 1000,
    "height": 400,
    "mark": {
      "type": "circle",
      "opacity": 0.8,
      "stroke": "black",
      "strokeWidth": 1
    },
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {"grid": false,
      "tickCount": 40}
      },
      "y": {"field": "region", "type": "nominal", "axis": {"title": ""}},
      "size": {
        "field": "arrivals",
        "type": "quantitative",
        "title": "Annual Global Deaths",
        "legend": {"clipHeight": 30},
        "scale": {"rangeMax": 5000}
      },
      "color": {
        "field": "region", "type": "nominal", "legend": null}
    }
  }


{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/steverahardjo/viz02/refs/heads/main/src/dataset/streamgraph.csv"
    },
    "mark": {
        "type": "area",
        "interpolate": "monotone"
    },
    "encoding": {
        "x": {
            "timeUnit": "yearmonth",
            "field": "date",
            "axis": {
                "domain": false,
                "format": "%Y-%m",
                "tickSize": 0,
                "tickCount": "month"
            }
        },
        "y": {
            "field": "arrivals",
            "axis": null,
            "stack": "zero"
        },
        "color": {
            "field": "region",
            "scale": {
                "scheme": "category10"}
        }
    }
}

